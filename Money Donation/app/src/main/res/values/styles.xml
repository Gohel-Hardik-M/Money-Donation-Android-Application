<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Theme.DonateEase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/primary_green</item>
		<item name="colorPrimaryVariant">@color/primary_green_dark</item>
		<item name="colorOnPrimary">@color/white</item>
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<item name="android:statusBarColor">@color/white</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="android:windowBackground">@color/background_light</item>
		<!-- Make all TextView and EditText text bold by default -->
		<item name="android:textViewStyle">@style/AllBoldTextView</item>
		<item name="android:editTextStyle">@style/AllBoldEditText</item>
		<!-- Bold hints and labels for TextInputLayout -->
		<item name="textInputStyle">@style/AllBoldTextInputLayout</item>
		<!-- Bold Material buttons globally -->
		<item name="materialButtonStyle">@style/AllBoldMaterialButton</item>
		<item name="android:buttonStyle">@style/AllBoldPlatformButton</item>
	</style>

	<style name="Theme.DonateEase.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<!-- Global bold text for TextView -->
	<style name="AllBoldTextView" parent="@android:style/Widget.TextView">
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Global bold text for EditText (also applies to TextInputEditText) -->
	<style name="AllBoldEditText" parent="@android:style/Widget.EditText">
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Bold TextInputLayout labels/hints -->
	<style name="AllBoldTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="hintTextAppearance">@style/TextAppearance.BoldHint</item>
		<item name="helperTextTextAppearance">@style/TextAppearance.BoldHint</item>
		<item name="counterTextAppearance">@style/TextAppearance.BoldHint</item>
	</style>

	<style name="TextAppearance.BoldHint" parent="TextAppearance.MaterialComponents.Body2">
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Bold Material3/MaterialComponents buttons globally -->
	<style name="AllBoldMaterialButton" parent="Widget.Material3.Button">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="AllBoldPlatformButton" parent="@android:style/Widget.Button">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="CustomButton" parent="Widget.MaterialComponents.Button">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">56dp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/white</item>
		<item name="backgroundTint">@color/primary_green</item>
		<item name="cornerRadius">28dp</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">16dp</item>
		<item name="boxCornerRadiusTopStart">12dp</item>
		<item name="boxCornerRadiusTopEnd">12dp</item>
		<item name="boxCornerRadiusBottomStart">12dp</item>
		<item name="boxCornerRadiusBottomEnd">12dp</item>
	</style>

	<!-- Bold hint text for TextInputLayout headings -->
	<style name="BoldHintText">
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Material3 Button Styles -->
	<style name="Widget.Material3.Button.Filled" parent="Widget.Material3.Button">
		<item name="backgroundTint">@color/primary_green</item>
		<item name="android:textColor">@color/white</item>
		<item name="cornerRadius">8dp</item>
	</style>
</resources>